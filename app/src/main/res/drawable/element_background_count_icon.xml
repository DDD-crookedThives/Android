<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/butterscotch"
                android:endColor="@color/butterscotch"
                android:startColor="@color/butterscotch"
                android:type="linear" />
            <corners android:radius="100dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>